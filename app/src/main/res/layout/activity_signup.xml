<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="크슐랭가이드"
            android:fontFamily="@font/seoulnamsancb"
            android:textSize="50dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/title_color"

            />

        <ImageView
            android:id="@+id/signup_image"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:src="@drawable/pick_profile_pic"
            android:layout_margin="30dp"/>


        <EditText
            android:id="@+id/signup_edit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_design_1"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="10dp"
            android:hint=" 아이디 입력"
            android:fontFamily="@font/seoulnamsancb"
            android:textColorHint="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/idcheck_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="중복 확인"
            android:fontFamily="@font/seoulnamsancb"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold"
            android:padding="10dp"
            />

        <EditText
            android:id="@+id/signup_edit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_design_1"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="10dp"
            android:hint=" 닉네임 입력"
            android:fontFamily="@font/seoulnamsancb"
            android:textColorHint="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/nickcheck_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="중복 확인"
            android:fontFamily="@font/seoulnamsancb"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold"
            android:padding="10dp"
            />

        <EditText
            android:id="@+id/signup_edit3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_design_1"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="10dp"
            android:hint=" 비밀번호 입력"
            android:fontFamily="@font/seoulnamsancb"
            android:textColorHint="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="10dp"
            />
        <EditText
            android:id="@+id/signup_edit4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_design_1"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="14dp"
            android:hint=" 비밀번호 확인"
            android:fontFamily="@font/seoulnamsancb"
            android:textColorHint="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="10dp"
            />


        <EditText
            android:id="@+id/signup_edit5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/edittext_design_1"
            android:fontFamily="@font/seoulnamsancb"
            android:hint="학교 이메일 입력"
            android:padding="10dp"
            android:textColorHint="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/title_button_design"
            android:fontFamily="@font/seoulnamsancb"
            android:paddingVertical="10dp"
            android:text="회원 가입하기"
            android:textColor="@color/white"
            android:textSize="20dp"
            />


    </LinearLayout>
</ScrollView>
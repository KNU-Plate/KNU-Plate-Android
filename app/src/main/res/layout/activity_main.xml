<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_menu"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/detail_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/profile_icon_default" />

                <TextView
                    android:id="@+id/detail_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/seoulnamsancb"
                    android:text="Default UID"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seoulnamsancb"
                    android:text="크슐랭가이드"
                    android:textColorHint="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/seoulnamsancb"
                    android:text="카테고리별로 살펴보세요!"
                    android:textColorHint="#353535"
                    android:textSize="15dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginVertical="5dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/korean_food" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/seoulnamsancb"
                                android:gravity="center"
                                android:text="한식"
                                android:textColorHint="#353535"
                                android:textStyle="bold"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginVertical="5dp"
                                android:adjustViewBounds="true"
                                android:padding="5dp"
                                android:src="@drawable/chinese_food" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/seoulnamsancb"
                                android:gravity="center"
                                android:text="중식"
                                android:textStyle="bold"
                                android:textColorHint="#353535"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginVertical="5dp"
                                android:adjustViewBounds="true"
                                android:padding="3dp"
                                android:src="@drawable/japanese_food" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/seoulnamsancb"
                                android:gravity="center"
                                android:text="일식"
                                android:textStyle="bold"
                                android:textColorHint="#353535"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginVertical="5dp"
                                android:adjustViewBounds="true"
                                android:padding="2dp"
                                android:src="@drawable/world_food" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/seoulnamsancb"
                                android:gravity="center"
                                android:text="세계음식"
                                android:textStyle="bold"
                                android:textColorHint="#353535"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginVertical="5dp"
                                android:adjustViewBounds="true"
                                android:padding="5dp"
                                android:src="@drawable/coffee_food" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/seoulnamsancb"
                                android:gravity="center"
                                android:text="카페"
                                android:textStyle="bold"
                                android:textColorHint="#353535"
                                android:textSize="15dp" />
                        </LinearLayout>




                    </LinearLayout>
                </ScrollView>


                <!-- 문별 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seoulnamsancb"
                    android:text="문 별 맛집이 궁금하다면?"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/bt_northgate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">
                            <FrameLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/maincolor_button" />

                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:fontFamily="@font/seoulnamsancb"
                                    android:gravity="center"
                                    android:text="북"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginTop="1.2dp"
                                    android:layout_gravity="center"
                                    android:textColor="#FFFFFF"
                                    android:textSize="35dp" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/seoulnamsancb"
                                android:gravity="center"
                                android:text="북문"
                                android:textStyle="bold"
                                android:textColorHint="#353535"
                                android:textSize="15dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">
                            <FrameLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/maincolor_button" />

                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:fontFamily="@font/seoulnamsancb"
                                    android:gravity="center"
                                    android:text="동"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginTop="1.2dp"
                                    android:layout_gravity="center"
                                    android:textColor="#FFFFFF"
                                    android:textSize="35dp"  />
                            </FrameLayout>
                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/seoulnamsancb"
                                android:gravity="center"
                                android:text="동문"
                                android:textStyle="bold"
                                android:textColorHint="#353535"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/maincolor_button" />

                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:fontFamily="@font/seoulnamsancb"
                                    android:gravity="center"
                                    android:text="쪽"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginTop="1.2dp"
                                    android:layout_gravity="center"
                                    android:textColor="#FFFFFF"
                                    android:textSize="35dp" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/seoulnamsancb"
                                android:gravity="center"
                                android:text="쪽문"
                                android:textStyle="bold"
                                android:textColorHint="#353535"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/maincolor_button" />

                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:fontFamily="@font/seoulnamsancb"
                                    android:gravity="center"
                                    android:text="서"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginTop="1.2dp"
                                    android:layout_gravity="center"
                                    android:textColor="#FFFFFF"
                                    android:textSize="35dp" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/seoulnamsancb"
                                android:gravity="center"
                                android:text="서문"
                                android:textStyle="bold"
                                android:textColorHint="#353535"
                                android:textSize="15dp" />
                        </LinearLayout>


                    </LinearLayout>
                </ScrollView>

                <!--문별 끝-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seoulnamsancb"
                    android:text="오늘은 이거 어때?"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/restList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main"></FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:itemIconTint="@color/title_color"
        app:itemTextColor="@color/title_color"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottombar_menu" />
</RelativeLayout>



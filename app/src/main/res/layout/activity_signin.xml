<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="크슐랭가이드"
            android:fontFamily="@font/seoulnamsancb"
            android:textSize="50dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/title_color"

            />


        <EditText
            android:id="@+id/signin_edit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_design_1"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="28dp"
            android:hint=" 아이디 입력"
            android:fontFamily="@font/seoulnamsancb"
            android:textColorHint="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="10dp"
            />
        <EditText
            android:id="@+id/signin_edit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_design_1"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="14dp"
            android:hint=" 비밀번호 입력"
            android:inputType="textPassword"
            android:fontFamily="@font/seoulnamsancb"
            android:textColorHint="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="10dp"
            />

            <Button
                android:id="@+id/signin_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="90dp"
                android:layout_marginHorizontal="94dp"
                android:background="@drawable/title_button_design"
                android:fontFamily="@font/seoulnamsancb"
                android:paddingVertical="10dp"
                android:text="로그인"
                android:textColor="@color/white"
                android:textSize="20dp"
                />


    </LinearLayout>
</ScrollView>